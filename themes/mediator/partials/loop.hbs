{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
        <article class="{{post_class}}" itemscope itemtype="http://schema.org/BlogPosting" role="article">
          <div class="article-item">
            <header class="post-header">
              <h2 class="post-title" itemprop="name"><a href="{{url}}" itemprop="url">{{{title}}}</a></h2>
            </header>
            <section class="post-excerpt" itemprop="description">
              <p><a href="{{url}}" itemprop="url">{{excerpt words=42}}</a>   <a class="read-more" href="{{url}}">&raquo;</a></p>
            </section>
            <div class="post-meta">
              <time datetime="{{date format='YYYY-MM-DD'}}">{{date format='DD MMMM YYYY'}}</time>
              {{tags prefix=" on "}}
<!--            <span class="post-tags-set">on <span class="post-tag-">, <a href="/tag/"></a></span></span>-->
            </div>
          </div>
        </article>
{{/foreach}}

